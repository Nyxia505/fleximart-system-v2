rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile images - users can upload their own
    match /profile_images/{fileName} {
      allow read: if true;  // Anyone can view profile pictures
      // Users can upload/update/delete their own profile image
      // File name format: {userId}.jpg
      allow write: if request.auth != null && 
                      (fileName == request.auth.uid + '.jpg' ||
                       fileName == request.auth.uid + '.jpeg' ||
                       fileName == request.auth.uid + '.png');
      allow delete: if request.auth != null && 
                       (fileName == request.auth.uid + '.jpg' ||
                        fileName == request.auth.uid + '.jpeg' ||
                        fileName == request.auth.uid + '.png');
    }
    
    // Chat images - admin, staff, and customers can upload/view
    match /chat_images/{chatId}/{imageId} {
      allow read: if true;  // Anyone can read chat images (for display)
      // Allow any authenticated user (admin, staff, customer) to upload chat images
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Order rating images - anyone can read for display
    match /order_ratings/{orderId}/{imageId} {
      allow read: if true;  // Anyone can view rating images
      allow write: if request.auth != null;  // Authenticated users can upload
    }
    
    // Product images - admins and staff can upload
    match /product_images/{imageId} {
      allow read: if true;  // Anyone can view product images
      // Allow admin and staff to upload product images
      // Get user role once and check if admin or staff
      allow write: if request.auth != null && 
                      (firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
                       firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'staff');
      allow delete: if request.auth != null && 
                       (firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
                        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'staff');
    }
    
    // General uploads - authenticated users only
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
